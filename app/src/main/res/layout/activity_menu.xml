<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StartActivity"
    android:background="@drawable/menu_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageButton
            android:id="@+id/login_lb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_login"
            android:backgroundTint="@color/black" />


        <ImageButton
            android:id="@+id/help_lb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toLeftOf="@id/settings_lb"
            android:background="@drawable/ic_help"
            android:backgroundTint="@color/black" />

        <ImageButton
            android:id="@+id/settings_lb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/black"
            android:background="@drawable/ic_settings" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/menu_tetris">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TeTris"
            android:textColor="@color/white"
            android:textSize="90sp"
            android:layout_marginTop="80dp"
            android:includeFontPadding="false"
            android:fontFamily="@font/arcadeclassic"/>

        <Button
            android:id="@+id/startBt"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:text="START"
            android:textSize="50sp"
            android:layout_marginTop="100dp"
            android:includeFontPadding="false"
            android:fontFamily="@font/arcadeclassic"
            app:cornerRadius="10dp"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp"
            android:backgroundTint="#F1663A"/>

        <Button
            android:id="@+id/quitBt"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:text="QUIT"
            android:textSize="50sp"
            android:includeFontPadding="false"
            android:fontFamily="@font/arcadeclassic"
            app:cornerRadius="10dp"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp"
            android:backgroundTint="#00000000"/>
    </LinearLayout>


</LinearLayout>